<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ecommerce_app" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ocher</item>
        <item name="colorPrimaryVariant">@color/ocher_light</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="buttonStyle">@style/NotCapsButton</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_grey</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ButtonHotSale">
        <item name="colorPrimary">@color/white</item>
        <item name="android:background">@drawable/button_buy_now</item>
    </style>
    <style name="NotCapsButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ButtonRound">
        <item name="colorPrimary">@color/white</item>
        <item name="android:background">@drawable/button_round</item>
    </style>
</resources>